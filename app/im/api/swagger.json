      },
      "put": {
        "summary": "更新会话",
        "operationId": "putConversations",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/PutConversationsResp"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/PutConversationsReq"
            }
          }
        ],
        "tags": [
          "im"
        ],
        "security": [
          {
            "apiKey": []
          }
        ]
      }
    },
    "/v1/im/setup/conversation": {
      "post": {
        "summary": "建立会话",
        "operationId": "setUpUserConversation",
