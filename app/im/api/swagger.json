          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/setUpUserConversationResp"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/SetUpUserConversationReq"
            }
          }
        ],
        "tags": [
          "im"
        ],
        "security": [
          {
            "apiKey": []
