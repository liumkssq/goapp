            }
          }
        },
        "parameters": [
          {
            "name": "conversationId",
            "in": "query",
            "required": true,
            "type": "string"
          },
          {
            "name": "startSendTime",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "endSendTime",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "count",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int64"
          }
        ],
        "tags": [
          "im"
        ],
        "security": [
          {
            "apiKey": []
          }
        ]
      }
    },
    "/v1/im/conversation": {
      "get": {
        "summary": "获取会话",
