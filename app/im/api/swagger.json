      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "conversationId": {
          "type": "string"
        },
        "sendId": {
          "type": "string"
        },
        "recvId": {
          "type": "string"
        },
        "msgType": {
          "type": "integer",
          "format": "int32"
        },
        "msgContent": {
          "type": "string"
        },
        "chatType": {
          "type": "integer",
          "format": "int32"
        },
        "sendTime": {
          "type": "integer",
          "format": "int64"
        }
