    "ChatLogReq": {
      "type": "object",
      "properties": {
        "conversationId": {
          "type": "string"
        },
        "startSendTime": {
          "type": "integer",
          "format": "int64"
        },
        "endSendTime": {
          "type": "integer",
          "format": "int64"
